<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="cn.yuan.activitydemo">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<activity android:name=".intentflag.FlagTargetActivity"></activity>
		<activity android:name=".intentflag.FlagActivity" />

		<activity
			android:name=".startupmode.AffinityActivity"
			android:allowTaskReparenting="true"
			android:taskAffinity="yuan.affinity"></activity>
		<activity
			android:name=".startupmode.SingleInstanceActivity"
			android:launchMode="singleInstance" />
		<activity
			android:name=".startupmode.SingleTaskActivity"
			android:launchMode="singleTask" />
		<activity
			android:name=".startupmode.SingleTopActivity"
			android:launchMode="singleTop" />
		<activity
			android:name=".startupmode.StandardActivity"
			android:launchMode="standard" />
		<activity android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>

</manifest>