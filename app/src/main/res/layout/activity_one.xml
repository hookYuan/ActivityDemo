<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:paddingLeft="@dimen/size_16"
		android:paddingRight="@dimen/size_16">


		<TextView
			android:id="@+id/text_task"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/size_16"
			android:textColor="@color/colorFont33" />

		<TextView
			android:id="@+id/text_life_order"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/size_16"
			android:textColor="@color/colorFont33" />

		<Button
			android:id="@+id/btn_standard"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="跳转 默认启动模式 Activity" />

		<Button
			android:id="@+id/btn_singleTop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/size_10"
			android:onClick="onClick"
			android:text="跳转 栈顶唯一模式 Activity" />

		<Button
			android:id="@+id/btn_singleTask"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/size_10"
			android:onClick="onClick"
			android:text="跳转 栈内唯一模式 Activity" />

		<Button
			android:id="@+id/btn_singleInstance"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/size_10"
			android:onClick="onClick"
			android:text="跳转 全局单例模式 Activity" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/size_16"
			android:text="什么是affinity？"
			android:textColor="@color/colorFont33" />

		<Button
			android:id="@+id/btn_affinity"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/size_10"
			android:onClick="onClick"
			android:text="跳转 全局单例模式 Activity" />

	</LinearLayout>
</ScrollView>
